<p style="color: green"><%= notice %></p>

<h1>Microposts</h1>

<table class="table table-dark table-striped" style="margin-top: 40px;">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Content</th>
      <th scope="col">User_Id</th>
      <th scope="col" colspan="3">#</th>
    </tr>
  </thead>
  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <th scope="row"><%= micropost.id %></th>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td>
          <div class="btn btn-outline-info"><%= link_to "Show", micropost %></div>
        </td>
        <td>
          <div class="btn btn-outline-warning">
            <%= link_to 'Edit', edit_micropost_path(micropost) %></td>
          </div>
        <td>
          <div class="btn btn-outline-danger">
            <%= link_to 'Destroy', micropost, method: :delete,
            data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
    
  </tbody>
</table>
<br>


<div class="btn btn-outline-dark btn-submit"><%= link_to "New micropost", new_micropost_path %></div>
