<p id="notice""><%= notice %></p>
<h1 style="margin-top: 40px;">Users</h1>
<table class="table table-dark table-striped" style="margin-top: 40px;">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col" colspan="3">#</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <div class="btn btn-outline-info">
            <%= link_to 'Show', user %></td>
          </div>
        <td>
          <div class="btn btn-outline-warning">
            <%= link_to 'Edit', edit_user_path(user) %>
          </div>
        </td>
        <td>
          <div class="btn btn-outline-danger">
            <%= link_to 'Destroy', user, method: :delete,
            data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
    
  </tbody>
</table>
<br>
<div class="btn btn-outline-dark btn-submit"><%= link_to 'New User', new_user_path %></div>