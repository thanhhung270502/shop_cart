<h1 class="title">Sign Up!</h1>

<%= form_with model: @people, url: sign_up_path do |form| %>
<div class="container-sign-up">
    <div class="mb-1 row">
        <label for="staticEmail" class="col-sm-3 col-form-label">Email</label>
    </div>
    <div class="mb-1 row">
        <div class="col-sm-10">
            <%= form.text_field :email, class: "form-control", placeholder: "rails@gmail.com" %>
        </div>
    </div>
    <div class="mb-1 row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
    </div>
    <div class="mb-1 row">
        <div class="col-sm-10">
            <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
    </div>
    <div class="mb-1 row">
        <label for="inputPassword" class="col-sm-4 col-form-label">Password Confirmation</label>
    </div>
    <div class="mb-3 row">
        <div class="col-sm-10">
            <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Password" %>
        </div>
    </div>
    <div class="mb-1 row">
        <div class="col-sm-10">
            <%= form.submit "Sign Up" , class: "btn btn-secondary" %>
        </div>
    </div>
</div>

    
    
    
<% end %>